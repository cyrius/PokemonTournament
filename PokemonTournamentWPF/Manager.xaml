<Window x:Class="PokemonTournamentWPF.Manager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonTournamentWPF"
        mc:Ignorable="d"
        Title="Gestionnaire" Height="250" Width="200"
        Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Content="Gestion des Stades" Click="Gestion_Click" Name="btn_GestStades"/>
        <Button Grid.Row="1" Content="Gestion des Pokemon" Click="Gestion_Click" Name="btn_GestPokemon"/>
        <Button Grid.Row="2" Content="Gestion des Matches" Click="Gestion_Click" Name="btn_GestMatch"/>
        <Button Grid.Row="3" Content="Lancer le Tournoi" Click="Gestion_Click" Name="btn_lancer"/>
    </Grid>
</Window>
